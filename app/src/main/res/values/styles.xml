<resources>

    <style name="IntroActivityTheme" parent="AppTheme"/>

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorAccent">@android:color/transparent</item>
    </style>

    <style name="AppTheme.Button">
        <item name="android:padding">@dimen/app_button_padding_default</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/app_text_size_normal</item>
        <item name="android:textColor">@color/app_text_color_light</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AppTheme.Button.Social" parent="AppTheme.Button">
        <item name="android:background">@drawable/social_button_background</item>
    </style>

    <style name="AppTheme.Button.Transparent" parent="AppTheme.Button">
        <item name="android:background">@drawable/selector_button_transparent</item>
    </style>

    <style name="AppTheme.Button.Red" parent="AppTheme.Button">
        <item name="android:background">@drawable/selector_button_red</item>
    </style>

    <style name="AppTheme.Button.Grey" parent="AppTheme.Button">
        <item name="android:background">@drawable/selector_button_grey</item>
        <item name="android:textColor">@color/base_dark_grey</item>
    </style>

    <style name="AppTheme.CircularUpdateButton">
        <item name="android:background">@drawable/selector_circular_button_grey</item>
        <item name="android:padding">8dp</item>
        <item name="android:src">@drawable/ic_update</item>
    </style>

    <style name="AppTheme.Button.GreyBorder" parent="AppTheme.Button">
        <item name="android:background">@drawable/selector_button_grey_border</item>
        <item name="android:textColor">@color/base_dark_grey</item>
    </style>

    <style name="AppTheme.Button.LightGreyBorder" parent="AppTheme.Button">
        <item name="android:background">@drawable/selector_button_light_grey_border</item>
        <item name="android:textColor">@color/base_dark_grey</item>
    </style>

    <style name="AppTheme.EditText">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:textColor">@color/base_black</item>
        <item name="android:textColorHint">@color/base_grey</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textCursorDrawable">@drawable/autocomplete_background</item>
    </style>

    <style name="AppTheme.EditText.Answers" parent="AppTheme.EditText">
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
    </style>

    <style name="AppTheme.EditText.WithStroke" parent="AppTheme.EditText">
        <item name="android:background">@drawable/edit_background</item>
    </style>

    <style name="AppTheme.SpinnerStyle">
        <item name="android:background">@color/base_light_grey</item>
        <item name="android:paddingLeft">15dp</item>
    </style>

    <style name="AppTheme.Button.Neutral" parent="AppTheme.Button">
        <item name="android:background">@drawable/edit_background</item>
        <item name="android:textColor">@color/base_dark_grey</item>
    </style>

    <style name="AppTheme.EditTextGroup">
        <item name="android:background">@drawable/edit_background</item>
        <item name="android:padding">1dp</item>
    </style>

    <style name="AppTheme.TextView">
        <item name="android:padding">@dimen/app_textview_padding_default</item>
        <item name="android:textSize">@dimen/app_text_size_normal</item>
        <item name="android:textColor">@color/app_text_color_light</item>
    </style>

    <style name="AppTheme.TextView.Answers_List_Red">
        <item name="android:padding">10dp</item>
        <item name="android:textSize">@dimen/app_text_size_normal</item>
        <item name="android:textColor">@color/app_color_red_text</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="AppTheme.TextView.Answers_Voted" parent="">
        <item name="android:textSize">@dimen/app_text_size_normal</item>
        <item name="android:textColor">@color/app_color_text_black_transparently</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="AppTheme.TextView.Answers_List_Grey">
        <item name="android:padding">10dp</item>
        <item name="android:textSize">@dimen/app_text_size_normal</item>
        <item name="android:textColor">@color/base_dark_grey</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="AppTheme.HomeTab">
        <item name="android:text">@null</item>
        <item name="android:button">@null</item>
        <item name="android:padding">13dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:foreground">?android:selectableItemBackground</item>
        <item name="android:background">@drawable/selector_bg_tab_home</item>
    </style>

    <style name="AppTheme.TopicTab">
        <item name="android:button">@null</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">1dp</item>
        <item name="android:paddingRight">1dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/base_dark_grey</item>
        <item name="android:layout_weight">1</item>
        <item name="android:foreground">?android:selectableItemBackground</item>
        <item name="android:background">@drawable/selector_bg_posttopic_center</item>
    </style>

    <style name="AppTheme.TopicTab.Left" parent="AppTheme.TopicTab">
        <item name="android:background">@drawable/selector_bg_posttopic_left</item>
    </style>

    <style name="AppTheme.TopicTab.Right" parent="AppTheme.TopicTab">
        <item name="android:background">@drawable/selector_bg_posttopic_right</item>
    </style>

    <style name="AppTheme.StatisticTab">
        <item name="android:layout_width">@dimen/app_polls_voted_tab_width</item>
        <item name="android:layout_height">@dimen/app_polls_voted_tab_height</item>
        <item name="android:text">@null</item>
        <item name="android:button">@null</item>
    </style>

    <style name="AppTheme.MoreInfoTextView">
        <item name="android:textColor">@color/base_dark_grey</item>
    </style>

    <style name="CirclePageIndicatorsStyle">
        <item name="radius">3dp</item>
        <item name="fillColor">@android:color/white</item>
        <item name="pageColor">@android:color/transparent</item>
        <item name="strokeColor">@android:color/white</item>
        <item name="strokeWidth">2dp</item>
    </style>


    <!--   fragment text style   -->
    <style name="TitleTextStyle" parent="AppTheme.TextView">
        <item name="android:textColor">@color/base_black</item>
        <item name="android:layout_marginTop">@dimen/vertical_margin_normal</item>
    </style>

    <style name="BaseTextStyle" parent="TitleTextStyle">
        <item name="android:textSize">@dimen/app_text_size_middle</item>
        <item name="android:textColor">@color/base_dark_grey</item>
    </style>

    <style name="ProgressBarStyle" parent="Base.Widget.AppCompat.ProgressBar">
        <item name="colorControlActivated">@color/base_black</item>
        <item name="colorAccent">@color/base_black</item>
        <item name="android:progressDrawable">@drawable/progress_layer</item>
    </style>

    <style name="TabAnswerStatisticStyle" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>
